   <screen id="endgame" controller="mygame.EndScreen">
    <layer id="background" backgroundColor="#000f">
      <!-- ... -->
    </layer>
    <layer id="foreground" backgroundColor="#0000" childLayout="vertical">
    
    <!-- top panel-->
    <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center" backgroundColor="#b6e3f7">
    	<text text="Thanks For Playing!" font="Interface/Fonts/Default.fnt" width="100%" height="100%" />
    </panel>
    
